# ==============================================================================
# EditorConfig - Coding Style Definitions
# https://editorconfig.org
# ==============================================================================
# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
#
# This file defines coding styles for:
# - Go (backend)
# - JavaScript/TypeScript (frontend)
# - Python (SDK)
# - Configuration files (YAML, JSON, etc.)
# - Documentation (Markdown)
# - Shell scripts
#
# Most modern editors support EditorConfig either natively or via plugins.
# ==============================================================================

# This is the top-most EditorConfig file
root = true

# ==============================================================================
# Default settings for all files
# ==============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ==============================================================================
# Backend - Go files
# ==============================================================================
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 120

# Go test files
[*_test.go]
indent_style = tab
indent_size = 4

# ==============================================================================
# Frontend - JavaScript and TypeScript
# ==============================================================================
[*.{js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single

[*.{ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single

# ==============================================================================
# SDK - Python files
# ==============================================================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true

# Python test files
[test_*.py]
indent_style = space
indent_size = 4

[*_test.py]
indent_style = space
indent_size = 4

# ==============================================================================
# Configuration Files
# ==============================================================================

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JSON with comments (VS Code settings, etc.)
[*.jsonc]
indent_style = space
indent_size = 2

# package.json - special formatting
[package.json]
indent_style = space
indent_size = 2

# tsconfig.json
[tsconfig*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# docker-compose files
[docker-compose*.yml]
indent_style = space
indent_size = 2

# Kubernetes manifests
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# TOML files (Rust, Python poetry, etc.)
[*.toml]
indent_style = space
indent_size = 2

# INI files
[*.ini]
indent_style = space
indent_size = 2

[*.{conf,config}]
indent_style = space
indent_size = 2

# ==============================================================================
# Documentation
# ==============================================================================

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# README files
[README*.md]
trim_trailing_whitespace = false

# Changelog
[CHANGELOG.md]
trim_trailing_whitespace = false

# reStructuredText (Python docs)
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 80

# ==============================================================================
# Build and Task Files
# ==============================================================================

# Makefile (must use tabs!)
[Makefile]
indent_style = tab
indent_size = 4

[GNUmakefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ==============================================================================
# Shell Scripts
# ==============================================================================
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.bash]
indent_style = space
indent_size = 2
end_of_line = lf

[*.zsh]
indent_style = space
indent_size = 2
end_of_line = lf

